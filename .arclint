{
  "linters": {
    "ruby": {
      "type": "rubocop",
      "include": "/\\.(rb|rake)$/",
      "exclude": "(^db/)",
      "rubocop.config": ".rubocop.yml"
    },
    "jsx": {
      "type": "eslint",
      "include": "/\\.(js|jsx)$/"
    },
    "csslint": {
      "type": "csslint",
      "include" : "(\\.css$)"
    }
  }
}
