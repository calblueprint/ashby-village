<div class="edit-profile-form row">
  <div class="large-10 small-12 columns">
    <h2>Enter a new password below</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>
      <div class='password_mismatch form-error-msg'>
            Password and password confirmation don't match!
      </div>

      <div class="field">
        <%= f.label :password, "New password" %><br />
        <%= f.password_field :password, required: true, autofocus: true, id: "reset_pass", onkeyup: "passwordMatching('reset_pass', 'reset_pass_confirmation');", autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirm new password" %><br />
        <%= f.password_field :password_confirmation, required: true, id: "reset_pass_confirmation", onkeyup: "passwordMatching('reset_pass', 'reset_pass_confirmation');", autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Change my password" %>
      </div>
    <% end %>
  </div>
</div>
