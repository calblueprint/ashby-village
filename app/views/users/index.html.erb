<!-- eventually must be moved to group creation page to search for additional leaders-->
<div class="users-search">
  <h1>Search User</h1>
  <%= form_tag users_path, method: :get do %>
    <div class="form-group">
      <%= text_field_tag :query, params[:query], class: 'form-control typeahead', id: "user_search", autocomplete: "on" %>
      <%= submit_tag 'Search', class: 'btn btn-primary' %>
    </div>
    <% @search_users.each do |user| %>
      <%= link_to user.decorate.full_name, user %>
    <% end%>
  <% end %>
</div>
