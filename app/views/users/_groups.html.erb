<div class="row">
  <div class="leader-of small-12 large-12 column">
    <% @user.groups.leader_of.each do |group| %>
      <div class="group-tile row <%= group.neighborhood.id %> <%= group.kind %>">

        <div class="large-3">
          <%= image_tag group.photo, :class => "group-photo large-2 columns" %>
        </div>

        <div class="large-6 columns">
          <h3><%= group.name %></h3>
          <h6><%= group.kind.upcase %> group in <%= group.neighborhood.name.upcase %></h6>
          <%= image_tag(("member_count_icon.png"), :class => "member-count-icon") %>

          <% if group.users.count == 1 %>
            <h6><%= group.users.count %> member</h6>
          <% else %>
            <h6><%= group.users.count %> members</h6>
          <% end %>

          <div class="member-display">
            <% group.users.last(3).each do |user| %>
              <span data-tooltip aria-haspopup="true" class="has-tip" title="<%= user.decorate.full_name %>"><%= image_tag(user.photo(:thumb)) %></span>
            <% end %>
          </div>
        </div>
        <button class="large-3 right">Join Group</button>
      </div>
    <% end %>
  </div>
</div>
