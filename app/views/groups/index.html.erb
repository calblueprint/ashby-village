<h1>All groups</h1>
<h5> Show me
  <select class="selectKind">
    <option selected="selected" value="all"> All </option>
      <option value="social"> Social </option>
      <option value="neighborhood"> Neighborhood </option>
      <option value="committee"> Committee </option>
  </select>
  groups in <select class="selectNeighborhoods">
    <option selected="selected" value="all"> All </option>
    <%= @neighborhoods.each do |neighborhood| %>
      <option value=<%= neighborhood.id %>><%= neighborhood.name %></option>
    <% end %>
  </select>
.
</h5>
<table>
  <thead>
    <tr>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <div class="group-tile row">
        <h3><%= group.name %></h3>
        <h6><%= group.kind.upcase %> GROUP IN <%= group.neighborhood.name.upcase %></h6>
        <%= image_tag("member_count_icon.png") %>

        <% if group.users.count == 1 %>
          <h6><%= group.users.count %> MEMBER</h6>
        <% else %>
          <h6><%= group.users.count %> MEMBERS</h6>
        <% end %>

        <% group.users.last(3).each do |user| %>
          <%= image_tag user.photo(:thumb) %>
        <% end %>
        <button>Join Group</button>
      </div>

<!--       <%= react_component('GroupTile', {
        name: group.name,
        kind: group.kind,
        neighborhood: group.neighborhood.name,
        member_count: group.users.count,
        members: group.users.last(4)
      }) %> -->

      <tr>
        <td><%= group.id %></td>
      <tr class="<%= group.neighborhood.id %> <%= group.kind %>">
        <td><% if group.photo %>
          <%= image_tag group.photo(:thumb) %>
        <% end %></td>
        <td><%= group.neighborhood.name %></td>
        <td><%= group.name %></td>
        <td>
          members: <% group.users.last(4).each do |user|%>
            <% if user.photo %>
              <%= image_tag user.photo(:thumb) %>
            <% end %>
          <% end %>
          <% if group.users.count > 4 %>
            <%= '+' + group.users.count %>
          <% end %>
        </td>
        <td><%= group.kind %></td>
        <td><button>  <%=link_to 'Learn more', group %> </button><td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "Create new group", new_group_path %>