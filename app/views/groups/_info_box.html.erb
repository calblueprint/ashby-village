<div class="info-box large-5 columns">
  <h6>Description</h6>
  <p><%= @group.description %></p>
  <h6>Leader(s)</h6>
  <div class="listing-member-display">
    <% @group.users.leaders.each do |user| %>
      <% if user.photo %>
        <div class="image-wrapper">
          <%= image_tag("leader-icon.png", class: "group-leader-icon") %>
          <%= image_tag(user.photo(:thumb), class: "group-leader-photo") %>
        </div>
      <% end %>
    <%= link_to user.decorate.full_name, user %>
    <h6><%= user.phone %></h6><br>
    <% end %>
  </div>
</div>
