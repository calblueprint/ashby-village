<% provide(:title, @group.name) %>

  <!-- TODO (Shimmy): Add photo functionality -->

<div class="row group-header">
  <% if @group.photo %>
    <%= image_tag(@group.photo(:medium)) %>
  <% end %>
  <div class="image-shadow">
    <h2><%= @group.name %></h2>
    <h6><%= @group.kind %> GROUP IN <%= @neighborhood %></h6>
    <% if @group.users.include?(current_user) %>
      <button class="small-3 large-3 right group-joined" disabled>You Have Joined</button>
    <% else %>
      <%= link_to join_group_path(@group), :controller => 'groups', :action => 'join', method: :put do %>
        <button class="small-3 large-3 right group-join">Join Group </button>
        <% end %>
    <% end %>
  </div>
</div>

<div id="menu-bar">
  <%= render 'groups/menu', group: @group %>
</div>

<div class="row">
  <div class="large-7 left">
    <div class="group-new-post"><%=
      if @group.users.include?(current_user)
        render 'posts/new'
      else
        render 'posts/non_member'
      end %></div>
    <div class="group-posts column">
      <%= render 'posts/index', posts: @posts, reply: @reply %>
    </div>
    <div class="group-member-listing" id="member-listing"><%= render 'groups/member_listing', group: @group%></div>
      <div class="group-settings" id="settings-group"><%= render 'groups/settings', group: @group %></div>
  </div>
  <%= render 'groups/info_box' %>
</div>
