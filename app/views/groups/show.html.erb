<% provide(:title, @group.name) %>

  <!-- TODO (Shimmy): Add photo functionality -->

<div class="row group-header">
  <% if @group.photo %>
    <%= image_tag @group.photo(:medium) %>
  <% end %>
  <h2><%= @group.name %></h2>
  <h6><%= @group.kind %> GROUP IN <%= @neighborhood.name%></h6>
</div>

<%= link_to "View member listing", member_listing_group_path(@group) %>
<%= render 'groups/settings' %>

<div class="row">
    <%= render 'posts/new' %>
</div>
<div class="row">
    <%= render 'posts/index', posts: @posts %>
</div>


<% if current_user.is_leader(@group) %>
    <%= link_to 'Edit Group', edit_group_path, class: 'button success radius small' %>
<% end %>

