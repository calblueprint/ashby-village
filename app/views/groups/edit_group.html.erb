<h2>Edit Group</h2>

<%= form_for(resource, as: resource_name, url: group_path(@group), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, :value => @group.name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description, autofocus: true, :value => @group.description %>
  </div>

  <div class="field">
    <%= f.label :kind %>
    <%= f.email_field :kind, autofocus: true, :value => @group.kind %>
  </div>

  <div class="field">
    <%= f.label :neighborhood_id %>
    <%= f.text_field :neighborhood_id, autofocus: true, :value => @group.neighborhood_id %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: 'button success radius small' %>
  </div>

<% end %>

<%= link_to 'Back', :back %>
