<h1>New group</h1>

<div class="user-search">
  <h1>Search Users</h1>

    <div class="form-group">
      <%= text_field_tag :query, params[:query], class: 'form-control typeahead' %>
      <%= submit_tag 'Search', class: 'btn btn-primary' %>
    </div>

</div>

  <%= form_for @group do |f| %>
    Name: <%= f.text_field :name %>
    Type: <%= f.select(:kind, @kinds)%>
    Description: <%= f.text_field :description %>
    Neighborhood: <%= f.select(:neighborhood_id, @neighborhoods)%>

    <div class="field">
      <%= f.label :photo %>
      <%= f.file_field :photo %>
    </div>

    <%= f.submit %>
  <% end %>
