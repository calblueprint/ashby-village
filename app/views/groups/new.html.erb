<h1>New group</h1>

<div class="user-search">
  <h1>Search Users</h1>

  <%= form_tag books_path, class: "form-inline", method: :get do %>
  <div class="input-group input-group-lg" >
    <% if params[:query].present? %>
    <div class="input-group-btn">
      <%= link_to "clear", books_path, class: "btn btn-default" %>
   </div>
   <%= text_field_tag :query, params[:query], class: "form-control", id: "book_search", autocomplete: "off" %>
   <div class="input-group-btn">
     <%= submit_tag "Search", class: "btn btn-primary" %>
   </div>
  <% end %>
  </div>

</div>

  <%= form_for @group do |f| %>
    Name: <%= f.text_field :name %>
    Type: <%= f.select(:kind, @kinds)%>
    Description: <%= f.text_field :description %>
    Neighborhood: <%= f.select(:neighborhood_id, @neighborhoods)%>

    <div class="field">
      <%= f.label :photo %>
      <%= f.file_field :photo %>
    </div>

    <%= f.submit %>
  <% end %>
