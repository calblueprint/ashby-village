<%= render "users/sessions/new" %>

<div class="nav-container fixed">
<nav class="sticky top-bar" data-topbar role="navigation">
  <ul class="title-area">
    <li class="home left">
      <%= link_to image_tag("ashby_village_icon.png"), root_path %>
    </li>
  </ul>
  <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right">
      <ul class="nav navbar-nav navbar-right">
        <!-- if user signed in, show profile, account settings, and sign out button -->
        <% if user_signed_in? %>

          <li class="my-groups">
            <%= link_to image_tag("groups_icon.png") + "My Groups", '#' %>
          </li>
          <li class="my-profile"><%= link_to "My Profile", current_user %></li>


          <li><%= link_to "Account Settings", edit_user_password_path %></li>
          <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
        <% else %>
          <!-- if user not signed in, show these links -->
          <li><%= link_to "About", '#' %></li>
          <li><%= link_to "Member Login", "#", data: {toggle: "modal", target: "#myModal", :"reveal-id"=>"login"} %></li>
        <% end %>
      </ul>
    </ul>
  </section>
</nav>
</div>
