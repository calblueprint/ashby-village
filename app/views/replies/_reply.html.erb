<div class="reply-user row collapse" id="reply-<%= reply.id %>">
  <div class="reply-display-member large-2 columns">
    <% if reply.user.is_leader(@group) %>
    <div class="imageWrapper">
      <%= image_tag("leader-icon.png", class: "group-leader-icon") %>
      <%= image_tag(reply.user.photo(:thumb), class: "group-leader-photo") %>
    </div>
    <% else %>
      <%= image_tag(reply.user.photo(:thumb)) %>
    <% end %>
  </div>
  <div class="large-10 columns">
    <p><%= link_to reply.user.decorate.full_name, reply.user %></p>
    <h6 class="timestamp"><i> Replied <%= time_ago_in_words(reply.created_at) %> ago. </i></h6>
    <p><%= reply.content %></p>
  </div>
</div>
